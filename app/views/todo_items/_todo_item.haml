%article{ :class => "todo-item #{'complete' if todo_item.is_complete?} #{'expired' if todo_item.expired?}", :id => "todo-item_#{todo_item.id}" }
  .row
    .large-1.small-2.columns
      .drag-handle
      .is-complete
        = form_for [todo_item.todo_list, todo_item] do |f|
          = f.check_box :is_complete
    .large-7.small-10.columns
      %h6= link_to todo_item.title, [todo_item.todo_list, todo_item]
      - if todo_item.assignee
        %span.assignee
          %i.social-foundicon-torso
          = todo_item.assignee.user
      - if todo_item.due_date
        %span.due-date
          %i.foundicon-clock
          = due_date_in_words todo_item.due_date
      - if todo_item.comments.any?
        %i.social-foundicon-chat
        %span.comments= todo_item.comments.count
    .large-4.columns.hide-for-small
      .actions
        = link_to todo_item_worklogs_path(todo_item), :class => '' do
          %i.foundicon-clock
        -#= render :partial => 'worklogs/form', :locals => { :todo_item => todo_item, :worklog => Worklog.new }
        = link_to edit_todo_list_todo_item_path(todo_item.todo_list, todo_item), :class => '', :title => 'Edit' do
          %i.foundicon-edit
        = link_to [todo_item.todo_list, todo_item], :confirm => 'Are you sure?', :method => :delete, :class => '', :title => 'Delete' do
          %i.foundicon-trash

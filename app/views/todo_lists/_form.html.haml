-#= form_for todo_list, :remote => true, :'data-bind' => 'submit: addTodoList' do |f|
= form_for todo_list, :'data-bind' => 'submit: addTodoList' do |f|
  = render :partial => "shared/error_messages", :locals => { :object => todo_list }
  .field
    = f.text_field :title, :placeholder => t(:'helpers.placeholder.todo_list.title'), :'data-bind' => 'value: newTodoTitle'
  .field.hide
    = f.text_area :description, :placeholder => :description
  .actions.hide
    = f.submit 'Save'

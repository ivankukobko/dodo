%li
  %article
    = link_to user do
      -if !project.nil?
        - if user.is_owner?(project)
          %i.social-foundicon-torso
        - elsif user.accepted_project?(project)
          %i.social-foundicon-torso
        - else
          %i.social-foundicon-torso
      - else
        %i.social-foundicon-torso
      = user

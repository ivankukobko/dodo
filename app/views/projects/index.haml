.row
  - for project in projects do
    .large-4.columns
      = link_to project, class: '' do
        .panel.project
          %h4.project-title= project
  .large-4.columns
    %a.button(href="#" data-reveal-id="new-project-modal")
      %i.foundicon-plus
      = t(:'projects.actions.create.title')
  .reveal-modal#new-project-modal
    %a.close-reveal-modal &#215;
    %h2= t(:'projects.actions.create.title')
    = render :partial => 'form'
  %hr/
.row
  - for list in todo_lists do
    .large-4.columns
      = link_to list, class: '' do
        .panel.project
          %h4.project-title= list
  .large-4.columns
    %a.button(href="#" data-reveal-id="new-list-modal")
      %i.foundicon-plus
      = t(:'todo_lists.actions.create.title')
  .reveal-modal#new-list-modal
    %a.close-reveal-modal &#215;
    %h2= t(:'todo_lists.actions.create.title')
    = render :partial => 'todo_lists/form', locals: { todo_list: TodoList.new, project: nil }

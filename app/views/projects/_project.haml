%li
  %article.project
    %h3= link_to project, project
    .description= project.description
    .users
      %h4 Shared with
      - for user in project.users
        = link_to user do
          - if user.accepted_project?(project)
            %span.icon.icon-user
          - else
            %span.icon.icon-user-question
          = user

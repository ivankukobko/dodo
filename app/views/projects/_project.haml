%li
  %article.project
    %h3
      %span.icon.icon-block
      = link_to project, project
    -#.description= project.description
    .progress
      Completed
      = project.todo_items.complete.count
      from
      = project.todo_items.count
      tasks in
      = project.todo_lists.count
      lists

    - unless project.users.empty?
      %hr/
      .users
        %h5
          %span.icon.icon-block-share
          Shared with:
        - for user in project.users
          = link_to user do
            - if user.accepted_project?(project)
              %span.icon.icon-user
            - else
              %span.icon.icon-user-question
            = user

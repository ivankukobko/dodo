doctype html
html lang="en"

head
  meta charset="utf-8"

  -# Set the viewport width to device width for mobile
  meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0"
  / Always force latest IE rendering engine (even in intranet) &amp; Chrome Frame
  meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"
  title= t(:'site.name')
  meta content= "" name="description"/
  meta content= "" name="author"/
  / meta name="google-site-verification" content="2MbWrv9nBu8op4F60ZppKIIu2kFA1irO21WW5vbUHYE"/
  / Place favicon.ico and apple-touch-icon.png in the root of your domain

  = stylesheet_link_tag "application"
  = javascript_include_tag "vendor/custom.modernizr"
  = csrf_meta_tag

body class="page-#{controller_name}"
  #page
    = render 'shared/header'
    #main
      #content.container
        .row
          .flash= render 'shared/flash_messages'
        = yield

    = render 'shared/footer'

  = javascript_include_tag 'application'
  = render 'shared/analytics'

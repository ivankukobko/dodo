    %script{ :src => "http://html5shiv.googlecode.com/svn/trunk/html5.js" }
  = csrf_meta_tags
%body
  #page
    .flash= render 'shared/flash_messages'
    %header
      .container
        .row
          .threecol
            %h1#logo
              = link_to 'Dodo', root_url
              #beta-sign βετα
          .sixcol
            %nav.top-nav= render 'shared/top_nav'
          .threecol.last
            .login-bar= render 'shared/login_bar'
    #main
      .container
        #content.row
          = yield
    %footer.container
      .row
        .threecol
          = raw( t :'site.copyright' )
        .sixcol
          = t :'site.info'
        .threecol.last
          (:
  = image_tag 'ajax.gif', :id => 'ajax', :style => 'display: none;'

  -#= render 'shared/templates'
  = javascript_include_tag 'application'
